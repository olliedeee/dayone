<%= render 'shared/pagetitle', title: "Showing all Users" %>

<div align="center">
  <%= will_paginate %>
</div>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="user-title"><%= link_to user.username.capitalize, 
                                         user_path(user) %></li>
    <li><small><%= pluralize(user.goals.count, "goal") if user.goals %> </small></li>
        </div>
      </div>
    </ul>      
  <% end %>
</div>
