<%= render 'shared/pagetitle', title: "Explore by Category" %>
<div align="center">
</div>
<div align="center">
  <% @categories.each do |cat| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
                   <li class="user-title"><%= link_to cat.name.capitalize, 
                                         category_path(cat) %></li>
          <li><small><%= pluralize(cat.goals.count, "goal") if cat.goals %> </small></li>
          <% if user_signed_in? && current_user.admin? %>
          <li><%= link_to "Edit this category", edit_category_path(cat)  %></li>
          <% end %>
        </div>
      </div>
    </ul>      
  <% end %>
</div>
